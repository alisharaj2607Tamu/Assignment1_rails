<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th style="<%= 'background-color: lightblue;' if session[:sort] == 'title' %>">
        <%= sortable "title", "Title" %>
        <%= session[:sort] == 'title' ? (session[:direction] == 'asc' ? ' ▲' : ' ▼') : '' %>
      </th>
      <th style="<%= 'background-color: lightblue;' if session[:sort] == 'rating' %>">
        <%= sortable "rating", "Rating" %>
        <%= session[:sort] == 'rating' ? (session[:direction] == 'asc' ? ' ▲' : ' ▼') : '' %>
      </th>
      <th style="<%= 'background-color: lightblue;' if session[:sort] == 'release_date' %>">
        <%= sortable "release_date", "Release Date" %>
        <%= session[:sort] == 'release_date' ? (session[:direction] == 'asc' ? ' ▲' : ' ▼') : '' %>
      </th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to 'Show', movie_path(movie) %> |
          <%= link_to 'Edit', edit_movie_path(movie) %> |
          <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="4">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path %>
